---
import NetspectiveLayout from "../../../layouts/ds/tailwind/NetspectiveLayout.astro";
import { routes, Route } from "../../../lib/native/route";
import {seniorManagement} from "../../../governance/native/netspective/senior_management";
import {engineering} from "../../../governance/native/netspective/engineering";
import {corporateAdvisory} from "../../../governance/native/netspective/corporate_advisory";
import {corporateGovernance} from "../../../governance/native/netspective/corporate_governance";
export interface Props {
	readonly route: Route<any, any>;
}


const { route } = Astro.props;
const r = routes(Astro, Astro.props.route);

---

<NetspectiveLayout route={route} {r}>
  <main>
    <section class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
      <article class="pb-6 curated-content">
        <div class="text-center">
         <h3 class="text-2xl font-bold mb-4 mt-4 text-center inline-flex"><span class="bg-orange-600 text-white py-2 px-8">Team</span></h3>
        </div>
        <section class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
          <article class="py-9">
            <h3 class="text-2xl font-bold pb-10 mb-10 text-gray-800 uppercase">SENIOR MANAGEMENT</h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-4 text-center">
                
                { 
                seniorManagement.map((item) => (
                <div class="">
                  <div class="flex justify-center">
                    <img src={item.image} alt="Profile Image" class="w-20 h-20 rounded-full"/>
                  </div>
                  <div class="text-base font-semibold py-2 text-gray-800">{item.name}</div>
                    <span>{item.designation}</span>
                </div>
                ))
                }
              </div>
          </article> 
          <article class="py-9">
            <h3 class="text-2xl font-bold pb-10 mb-10 text-gray-800 uppercase">ENGINEERING ASSOCIATES</h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-5 gap-4 text-center">
                { 
                  engineering.map((detail) => (
                  <div class="">
                      <div class="flex justify-center">
                        <img src={detail.image} alt="" class="w-20 h-20 rounded-full" />              
                        </div>
                      <div class="text-base font-semibold py-2 text-gray-800">{detail.name}</div>
                  </div>
                  ))
                }                           
              </div>
          </article> 
          <article class="py-9">
            <h3 class="text-2xl font-bold pb-10 mb-10 text-gray-800 uppercase">CORPORATE ADVISORY</h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-4 text-center">
                { 
                  corporateAdvisory.map((item) => (
                  <div class="">
                      <div class="flex justify-center">
                        <img src={item.image} alt="" class="w-20 h-20 rounded-full" />              
                        </div>
                      <div class="text-base font-semibold py-2 text-gray-800">{item.name}</div>
                      <span>{item.designation}</span>
                  </div>
                  ))
                }
              </div>
          </article> 
          <article class="py-9">
            <h3 class="text-2xl font-bold pb-10 mb-10 text-gray-800 uppercase">BOARD OF DIRECTORS</h3>
              <div class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-4 text-center">
                { 
                  corporateGovernance.map((item) => (
                  <div class="">
                      <div class="flex justify-center">
                        <img src={item.image} alt="" class="w-20 h-20 rounded-full" />              
                        </div>
                      <div class="text-base font-semibold py-2 text-gray-800">{item.name}</div>
                  </div>
                  ))
                }
              </div>
          </article> 
        </section>
      <div class="clear"></div>
      </article>  
    </section>
  </main>
  <section class="px-8 sm:px-6 lg:px-8 bg-cover bg-no-repeat bg-center py-10 bg-image">
    <article class="mx-auto max-w-6xl py-9 text-white text-center">
      <h3 class="text-2xl font-semibold pb-5">Netspective is a leader in Technology and Consulting services in regulated markets - Healthcare, Government and Medical Technology.</h3>
      <p>Technology, consulting, and solutions focused on firms impacted by FDA, ONC, NIST or other safety, privacy, and security regulations.</p>
    </article>
  </section>
</NetspectiveLayout>

  
  
  
  