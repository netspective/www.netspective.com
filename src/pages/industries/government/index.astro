---
import NetspectiveLayout from "../../../layouts/ds/tailwind/NetspectiveLayout.astro";
import { Content } from "../../../content/industries/government/government.md";
import * as greatPost from '../../../content/industries/government/government.md';
// const posts = await Astro.glob('../pages/post/*.md');
import { routes, Route } from "../../../lib/native/route";

export interface Props {
	readonly route: Route<any, any>;
}


const { route } = Astro.props;
const r = routes(Astro, Astro.props.route);
---
<style>
  body {
    font-size: 16px;
    line-height: 25px;
    color: #333;
}
p {
    margin-bottom:15px!important;
}
.curated-content ul {
	list-style-type: disc !important;
	margin-left: 25px !important
}

.curated-content ul li {
	margin-bottom: 10px !important;
}

.curated-content ol {
	list-style-type: decimal !important;
	margin-left: 25px !important
}

.curated-content ol li {
	margin-bottom: 10px !important;
}
.curated-content ul li p, .curated-content ol li p {
	margin-bottom: 10px !important;	
}
</style>
<NetspectiveLayout route={route} {r}>
  <main class="py-8">
    <section class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
      <article class="pb-6 curated-content">
        <div class="text-center">
         <h3 class="text-2xl font-bold mb-10 mt-4 text-center inline-flex"><span class="bg-orange-600 text-white py-2 px-8">{greatPost.frontmatter.title}</span></h3>
        </div>
         <Content/>
      <div class="clear"></div>
      </article>  
    </section>
  </main>
  <section class="px-8 sm:px-6 lg:px-8 bg-cover bg-no-repeat bg-center py-10 bg-image">
    <article class="mx-auto max-w-6xl py-9 text-white text-center">
      <h3 class="text-2xl font-semibold pb-5">Netspective is a leader in Technology and Consulting services in regulated markets - Healthcare, Government and Medical Technology.</h3>
      <p>Technology, consulting, and solutions focused on firms impacted by FDA, ONC, NIST or other safety, privacy, and security regulations.</p>
    </article>
  </section>
</NetspectiveLayout>

  
  