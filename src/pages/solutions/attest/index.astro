---
import NetspectiveLayout from "../../../layouts/ds/tailwind/NetspectiveLayout.astro";
import { routes, Route } from "../../../lib/native/route";

export interface Props {
	readonly route: Route<any, any>;
}


const { route } = Astro.props;
const r = routes(Astro, Astro.props.route);

---

<NetspectiveLayout route={route} {r}>
  <main>

    <!-- inner page > starts -->
    <section class="px-8 sm:px-6 lg:px-8 bg-cover bg-no-repeat bg-center py-10" style="background-image: url(/assets-natural/brand/www.netspective.com/solutions/header-bg.jpg);">
      <article class="mx-auto max-w-4xl py-9 text-white text-center">
        <h3 class="text-2xl md:text-4xl font-semibold pb-5 uppercase">Automated security assessment questionnaires, response scoring, and compliance reporting system</h3>
        <p class="text-xl pb-5 font-semibold text-gray-100">Netspective Attest is the easiest way to create requests for information (RFIs) or security assessment questionnaires, quickly share them with respondents, score them, and track compliance and responses longitudinally.</p>
        <h4 class="text-2xl font-semibold pb-5 text-gray-100">Security Assessments & Compliance Dashboard</h4>
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <div></div>
          <div class="my-2">
          <a href="#." class="text-white">
            <p class="pb-1 flex justify-center"><img src={r.uaAssetURL.brand(
              "/www.netspective.com/solutions/attest/questionnaire-icon.png"
            )} alt="Questionnaire Distribution"></p>
            <p class="pb-0 leading-5">Questionnaire Distribution</p>
          </a>
          </div>
          <div class="my-2">
            <a href="#." class="text-white">
              <p class="pb-1 flex justify-center"><img src={r.uaAssetURL.brand(
                "/www.netspective.com/solutions/attest/response-icon.png"
              )} alt="Collation and Scoring of Responses"></p>
              <p class="pb-0 leading-5">Collation and Scoring of Responses</p>
            </a>  
          </div>
          <div class="my-2">
            <a href="#." class="text-white">
              <p class="pb-1 flex justify-center"><img src={r.uaAssetURL.brand(
                "/www.netspective.com/solutions/attest/reporting-icon.png"
              )} alt="Assessment and Reporting"></p>
              <p class="pb-0 leading-5">Assessment and Reporting</p>
            </a>  
          </div>
          <div></div>
        </div>
      </article>
    </section>
    
    <!-- inner nav > starts -->
    <section>
      <nav class="drop-shadow-xl text-white bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-red-600 via-red-900 to-red-900">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-16 justify-between">
            <div class="flex">
              <div class="-ml-2 mr-2 flex items-center md:hidden">
                <!-- Mobile menu button -->
                <button type="button" data-collapse-toggle="attest-mobile-menu" class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500" aria-controls="attest-mobile-menu" aria-expanded="false">
                  <span class="sr-only">Open main menu</span>
                  <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
