            )
          : "No data"
      } -->

      {
        allPosts.length > 0 ? (
          allPosts.map((post) => {
            if (post.frontmatter.type === "page") {
              return (
                <div id={post.frontmatter.slugid} class="border border-x-0 border-t-0 border-gray-100">
                  <article class="pt-10 pb-9">
                    <div class="text-center">
                      <h3 class="text-2xl font-bold mb-10 text-center inline-flex">
                        <span class="bg-orange-600 text-white py-2 px-8">
                          {post.frontmatter.title}
                        </span>
                      </h3>
                    </div>
                    <div set:html={post.compiledContent()} class="pb-6 curated-content"></div>
                  </article>
                </div>
              );
            } else {
              return null;
            }
          })
        ) : 
          "No data"
      }
    </section>
    
