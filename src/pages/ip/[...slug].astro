---
import NetspectiveLayout from "../../layouts/ds/tailwind/NetspectiveLayout.astro";
import { route } from "../../lib/native/route";
import { getCollection } from "astro:content";

export const intellectualPropertyCollection = "ip" as const; // export required because Astro needs it in getStaticPaths()
export const intellectualPropertyCollectionEntries = await getCollection<typeof intellectualPropertyCollection>(intellectualPropertyCollection);
export async function getStaticPaths() {
  return intellectualPropertyCollectionEntries.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const r = route(Astro, { originFsPath: "src/pages/[...slug].astro" }, { entry: {collection: intellectualPropertyCollection, entry } });

export function formatDate(dateString: string | number | Date) {
  const date = new Date(dateString);
  const options = { year: 'numeric', month: 'short', day: 'numeric' };
  return date.toLocaleDateString(undefined, options);
  
}

export function formattedCurrentDate(dateString: string | number | Date) {
    const date = new Date(dateString);
    const year = date.getFullYear();
    const month = String(date.getMonth() + 1).padStart(2, '0');
    const day = String(date.getDate()).padStart(2, '0');
    return `${year}-${month}-${day}`;
  }
---
<NetspectiveLayout route={r}>
  <main>
    <section class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8">
    <article class="pt-3 pb-2">
      <div class="grid grid-cols-1 md:grid-cols-12 gap-7">
        <div class="col-span-1 md:col-span-12 lg:col-span-8 curated-content">
          <h1>{ entry.data.title }</h1>        
            <div class="flex flex-col items-center border border-gray-200 rounded-lg shadow md:flex-row bg-gray-100 hover:bg-gray-200 my-5">
              <img class="object-cover w-full sm:w-1/2 p-3" src={ entry.data.thumbnail } alt="">
              <div class="flex flex-col justify-between py-4 pl-4 pr-6 text-xl">
                  <!-- <h3 class="font-semibold">Patent Details</h3> -->
                  { entry.data['problem-solved-by-the-invention'] }              
              </div>
            </div>
            <Content/>
            <div class="clear"></div>
        </div>
        <div class="col-span-1 md:col-span-12 lg:col-span-4 right-section">        
          <div class="w-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 overflow-hidden">
            <div class="flex items-center justify-between bg-orange-600 text-white px-4 py-3">
                <div class="text-2xl font-medium"> { entry.data['uspto-publication-number'] }</div>
          </div>
          <div class="grid grid-cols-1 md:grid-cols-12 gap-4 px-4 py-2 bg-orange-700 text-white text-sm">
            <div class="col-span-1 md:col-span-12"><a href={ entry.data['uspto-patent-pdf'] } target="_blank" class="text-white hover:text-gray-300"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 mr-2 inline-block">
              <path fill-rule="evenodd" d="M5.625 1.5c-1.036 0-1.875.84-1.875 1.875v17.25c0 1.035.84 1.875 1.875 1.875h12.75c1.035 0 1.875-.84 1.875-1.875V12.75A3.75 3.75 0 0016.5 9h-1.875a1.875 1.875 0 01-1.875-1.875V5.25A3.75 3.75 0 009 1.5H5.625zM7.5 15a.75.75 0 01.75-.75h7.5a.75.75 0 010 1.5h-7.5A.75.75 0 017.5 15zm.75 2.25a.75.75 0 000 1.5H12a.75.75 0 000-1.5H8.25z" clip-rule="evenodd" />
              <path d="M12.971 1.816A5.23 5.23 0 0114.25 5.25v1.875c0 .207.168.375.375.375H16.5a5.23 5.23 0 013.434 1.279 9.768 9.768 0 00-6.963-6.963z" />
            </svg>Download PDF</a></div>
            </div>
                <aside class="text-sm px-4 py-3">
                  <div class="mb-1">
                    <span class="mr-2 font-medium">Inventor:</span><span class="text-gray-500"><a href="#.">{ entry.data.inventor }</a></span>
                    </div>
                    <div class="mb-1">
                      <span class="mr-2 font-medium">Current Assignee:</span><span class="text-gray-500">{ entry.data['current-assignee'] }</span>
                      </div>
                </aside>
                <hr>
                <aside class="text-sm mt-3 mb-3">
                  <span class="font-medium block px-4 pb-3">Application { entry.data['uspto-publication-number'] }events</span>
                  <ul role="list">
                    <li class="flex justify-between pb-2 px-4 leading-5">
                      <div class="flex-shrink-0 font-medium">{formattedCurrentDate(entry.data['issue-date'])}</div>
                      <div class="flex w-0 flex-1 items-center">
                        <div class="ml-4 flex min-w-0 flex-1 gap-2 text-gray-500">Application filed by {entry.data['application-date']}</div>
                      </div>
                    </li>
                    <li class="flex justify-between pb-2 px-4 leading-5">
                      <div class="flex-shrink-0 font-medium">{formattedCurrentDate(entry.data['expiry-date'])}</div>
                      <div class="flex w-0 flex-1 items-center">
                        <div class="ml-4 flex min-w-0 flex-1 gap-2 text-gray-500">Publication of  { entry.data['uspto-publication-number'] }</div>
                      </div>
                    </li>
                    <li class="flex justify-between pb-2 px-4 leading-5">
                      <div class="flex-shrink-0 font-medium">{formattedCurrentDate(entry.data['application-date'])}</div>
                      <div class="flex w-0 flex-1 items-center">
                        <div class="ml-4 flex min-w-0 flex-1 gap-2 text-gray-500">Application granted</div>
                      </div>
                    </li>
                    <li class="flex justify-between pb-2 px-4 leading-5">
                      <div class="flex-shrink-0 font-medium">{entry.data['uspto-patent-family-members-publication-numbers'] }</div>
                      <div class="flex w-0 flex-1 items-center">
                        <div class="ml-4 flex min-w-0 flex-1 gap-2 text-gray-500">Family Members</div>
                      </div>
                    </li> 
                  </ul>
                </aside>
                <hr>
                <aside class="text-sm mt-3 mb-3 px-4 pb-3">
                  <div class="mb-2"><span class="mr-2 font-medium">Territorial Scope:</span><span class="text-gray-500">{entry.data['territorial-scope']}</span></div>
                  <div class="mb-2"><span class="mr-2 font-medium">Patent Owner's Rights:</span><span class="text-gray-500">{entry.data['patent-owners-rights']}</span></div>
                  <div class="mb-2"><span class="mr-2 font-medium">External link:</span><span class="text-gray-500 break-all"><a href={entry.data['uspto-patent-url']}>{entry.data['uspto-patent-url']}</a></span></div>
                </aside>
          </div>
        </div>
      </div>
    </article>
    </section>
  </main>
</NetspectiveLayout>

