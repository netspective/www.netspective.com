---
export interface Props {
  title: string;
  bgColor?: string;
}

const { title, bgColor = "bg-gray-100" } = Astro.props as Props;
---

<div class={`max-w rounded overflow-hidden shadow-lg ${bgColor}`}>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-base">
      <slot/>
    </p>
  </div>
</div>